<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite thread-count="5" name="Suite" parallel="tests">
	<!--to run all the browsers parallelly we can use paralle=tests at suite level -->
	<test name="ChromeTest">
		<!--to run from the specific browser we can chnage the value = edge/chrom/firefox -->
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="Parameterizationj.ParamTest" />
		</classes>
	</test> <!--
	Test -->

	<test name="EdgeTest">
		<!--to run from the specific browser we can chnage the value = edge/chrom/firefox -->
		<parameter name="browser" value="edge" />
		<classes>
			<class name="Parameterizationj.ParamTest" />
		</classes>
	</test> <!--
	Test -->

	<test name="FirefoxTest">
		<!--to run from the specific browser we can chnage the value = edge/chrom/firefox -->
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="Parameterizationj.ParamTest" />
		</classes>
	</test> <!--
	Test -->
</suite> <!--
Suite -->
